[MASTER]
ignore=CVS
jobs=1

[MESSAGES CONTROL]
# Disable specific warnings/errors
disable=import-error,
        no-name-in-module,
        E0401,
        E0611,
        R0903,
        E1102

[REPORTS]
output-format=text
reports=no

[BASIC]
good-names=i,j,k,ex,Run,_,g,w,x,y,z,id
# Permitir nomes Qt camelCase para métodos de evento (padrão snake_case OU métodos Qt *Event)
attr-rgx=[a-z_][a-z0-9_]{2,30}$|^[a-z]+Event$

[FORMAT]
max-line-length=100

[DESIGN]
max-args=5
max-locals=15
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
min-public-methods=2
max-public-methods=20
max-bool-expr=5

[TYPECHECK]
ignore-mixin-members=yes
ignore-on-opaque-inference=yes

[VARIABLES]
dummy-variables-rgx=(_+[a-zA-Z0-9]*?$)|dummy
